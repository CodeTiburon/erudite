.bar
  background-color #FFFFFF
  border-bottom 1px solid #DDDDDD
  box-shadow 0px 2px 3px rgba(0, 0, 0, 0.04)
  padding 1em 0em
  .logo
    float left
    margin-right 1em
    width 35px
    .side
      width 35px

.secondary.network.menu
  margin-top 0

.pusher > .footer
  border-radius 0em
  box-shadow none
  clear both
  margin 0em
  padding 4em 0em

.footer
  .container
    margin 0 auto
    width 850px
  .logo
    width 200px
  .ui.list
    i.icon
      display inline-block
      vertical-align top

.game-board .segment
  min-height 500px
  padding-top 230px

.game-board-active .segment .card
  cursor pointer

.login-form
  padding 80px 0

#login-page
  background-size cover
  .bar
    background none
    border 0
    .menu
      display none
    .logo .side
      width 50px
    .feature
      background none

.worldmap
  width 800px
  height 500px

.ui.menu .ui.item.avatar
  padding 0 .8em;